div.buf-login(layout="row", layout-align="center center", md-theme="loginTheme")
  div.buf-login__card(transparent-content)
    div.buf-login__logo(layout-padding, layout="column", layout-align="center center")
      img(src="images/logo-text.png")

    div.buf-login__card__content(layout="row", layout-align="center center")
      div.buf-login__card__forms(layout-padding)
        form(name="logInForm", ng-submit="vm.login(!logInForm.$invalid)", role="form", novalidate, ng-show="!vm.isRegistering")
          md-input-container
            label Username / email
            input#username(type="text", ng-model="vm.loginInfo.username", required)

          md-input-container
            label Password
            input#password(type="password", ng-model="vm.loginInfo.password", required)

          div(md-theme="altTheme")
            md-button.md-primary.md-raised.buf-login__button(type="submit") Log In

        form(name="registerForm", ng-submit="vm.register(!registerForm.$invalid)", role="form", novalidate, ng-show="vm.isRegistering")
          md-input-container
            label Email
            input#email(type="email", ng-model="vm.registerInfo.email", required)

          md-input-container
            label Username
            input#username(type="text", ng-model="vm.registerInfo.username", required)

          md-input-container
            label Password
            input#password(type="password", ng-model="vm.registerInfo.password", required)

          div(md-theme="altTheme")
            md-button.md-primary.md-raised.buf-login__button(type="submit") Sign Up

        div.buf-login__more-buttons(layout="row", ng-show="!vm.isRegistering", md-theme="altTheme")
          md-button.md-accent Forgot password?
          md-button.md-raised.md-warn(ng-click="vm.isRegistering=true") Sign Up

        div.buf-login__more-buttons(layout="row", ng-show="vm.isRegistering", md-theme="altTheme")
          md-button.md-accent Forgot password?
          md-button.md-raised.md-warn(ng-click="vm.isRegistering=false",  ng-show="vm.isRegistering") Log In