div.buf-login(layout="row", layout-align="center center")
  div.buf-login__content(transparent-content)
    div.buf-login__logo(layout-padding, layout="column", layout-align="center center")
      img(src="images/logo3.png")

    div(layout="row", layout-align="center center")
      div.buf-login__forms
        form(name="logInForm", ng-submit="vm.login(!logInForm.$invalid)", role="form", novalidate, ng-show="!vm.isRegistering")
          div.buf-login__form__space(layout="row", layout-align="center center")
            div.buf-login__form__container(layout-padding)
              md-input-container
                label Username / email
                input#username(type="text", ng-model="vm.loginInfo.username", required)

              md-input-container
                label Password
                input#password(type="password", ng-model="vm.loginInfo.password", required)

          md-button.md-primary.md-raised.md-cornered.buf-login__button(type="submit") Log In

        form(name="registerForm", ng-submit="vm.register(!registerForm.$invalid)", role="form", novalidate, ng-show="vm.isRegistering")
          div.buf-login__form__space(layout="row", layout-align="center center")
            div.buf-login__form__container(layout-padding)
              md-input-container
                label Email
                input#email(type="email", ng-model="vm.registerInfo.email", required)

              md-input-container
                label Username
                input#username(type="text", ng-model="vm.registerInfo.username", required)

              md-input-container
                label Password
                input#password(type="password", ng-model="vm.registerInfo.password", required)

          md-button.md-primary.md-raised.md-cornered.buf-login__button(type="submit") Sign Up

        div.buf-login__more-buttons(layout="row")
          md-button.md-cornered Forgot password?
          md-button.md-raised.md-cornered(ng-click="vm.isRegistering=!vm.isRegistering", aria-label="Switch form")
            <span ng-if="vm.isRegistering">Back to Log In</span>
            <span ng-if="!vm.isRegistering">Sign Up </span>