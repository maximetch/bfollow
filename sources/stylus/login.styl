.buf-login {
  height: 100%;

  &__content {
    width: 100%;
  }

  &__forms {
    width: 320px;
  }

  &__form {
    &__container {
      background-color: rgba(255, 255, 255, 0.9);
      box-shadow: 0 2px 5px 0 rgba(0,0,0,.26);
      flex: 1;
    }

    &__space {
      height: 250px;
    }
  }

  &__more-buttons {
    margin-top 10px;

    .md-button {
      margin: 0;
      flex: 1;

      &:first-child {
        background-color:  rgba(255, 255, 255, 0.3);
        margin-right: 10px;
        text-transform: none;
      }
    }
  }

  &__button {
    width: 100%;
    margin: 10px 0 0 0;
  }


  &__logo {
    $logoWidth = 260;

    img {
      width: unit($logoWidth, 'px');
    }
  }

  &__warning {
    color: #FFFFFF;
    background-color: rgba(255, 0, 0, 0.6);
    box-shadow: 0 2px 5px 0 rgba(0,0,0,.26);
  }
}