.buf-login {
  height: 100%;

  &__card {
    width: 100%;
    margin-top: -60px;

    &__forms {
      width: 320px;
    }
  }

  &__form__container {
    background-color: rgba(255, 255, 255, 0.9);
    box-shadow: 0 2px 5px 0 rgba(0,0,0,.26);
  }

  &__more-buttons {
    margin-top 10px;

    .md-button {
      width: 100%;
      margin: 0;
      flex: 1;

      &:first-child {
        background-color:  rgba(255, 255, 255, 0.3);
        margin-right: 10px;
        text-transform: none;
      }
    }
  }

  &__button {
    width: 100%;
    margin: 10px 0 0 0;
  }


  &__logo {
    img {
      width: 250px;
    }
  }
}